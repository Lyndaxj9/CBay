<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping> 
	
	<class name="com.CBay.beans.Image" table="IMAGE">
		<meta attribute="class-description">
			All Item's Images
		</meta>
		
		<id name="id" type="int" column="ImageID">
			<generator class="native">
				<param name="sequence">IMAGE_ID_SEQ</param>
			</generator>
		</id>
		
		<property name="ItemId" column="ItemID" type="int" ></property>
		<property name="Image" column="Image" type="binary" ></property>
		<property name="FileName" column="FileName" type="string"></property>
		

		
	</class>
	
   

	</hibernate-mapping>